<h1>Listado de Ideas</h1>
<div class="row">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Imagen</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Mostrar', idea %></td>
        <% if current_user.ideas.include? idea %>
        <td><%= link_to 'Editar', edit_idea_path(idea) %></td>
        <td><%= link_to 'Eliminar', idea, method: :delete, data: { confirm: 'Seguro de querer eliminar?' } %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva Idea', new_idea_path %>
